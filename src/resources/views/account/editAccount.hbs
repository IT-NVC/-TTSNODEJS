    <label for="exampleInputPassword1">New Password</label>
    <input type="password" name="newPassword" class="form-control" id="inputNewPassword" placeholder="Password">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Confirm New password</label>
    <input type="password" name="newConfirmPassword" class="form-control" id="confirmNewInputPassword" placeholder="Confirm password">
  </div>
  <button type="button" class="btn btn-primary" id="buttonEdit">Edit Account</button>
</form>


